@using WebAtlas.Data.Enum;
@using WebAtlas.ViewModels;
@model EditMaterialViewModel


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Название</label>
        <input asp-for="Title" class="form-control" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Контент</label>
        <input asp-for="Content" class="form-control" placeholder="Enter Content">
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Подтвердить</button>
</form>