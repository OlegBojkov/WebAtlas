@using WebAtlas.ViewModels;
@model EditProfileViewModel


<form method="post" asp-action="EditProfile" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="NameLita">Название</label>
        <input asp-for="NameLita" class="form-control" placeholder="Enter Title">
        <span asp-validation-for="NameLita" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">Город</label>
        <input asp-for="City" class="form-control" placeholder="Enter City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Street">Улица</label>
        <input asp-for="Street" class="form-control" placeholder="Enter Street">
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseNumber">Номер дома</label>
        <input asp-for="HouseNumber" class="form-control" placeholder="Enter HouseNumber">
        <span asp-validation-for="HouseNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Контактная почта</label>
        <input asp-for="ContactEmail" class="form-control" placeholder="Enter ContactEmail">
        <span asp-validation-for="ContactEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressLink">Ссылка на адрес</label>
        <input asp-for="AddressLink" class="form-control" placeholder="Ссылка на яндекс карты">
        <span asp-validation-for="AddressLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactPhone">Контактный телефон</label>
        <input asp-for="ContactPhone" class="form-control" placeholder="Enter ContactPhone">
        <span asp-validation-for="ContactPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Картинка</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Подтвердить</button>
    <a class="btn btn-outline-secondary" asp-controller="Dashboard" asp-action="Index">Назад</a>

</form>