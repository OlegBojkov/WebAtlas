﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model WebAtlas.ViewModels.DashboardViewModel


<h1 class="display-5 fw-normal">Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="News" asp-action="Create">Создать новость</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Event" asp-action="Create">Создать мероприятие</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Material" asp-action="Create">Создать материал</a>

<a type="button" class="btn btn-primary" asp-area="" asp-controller="User" asp-action="EditProfile">Редактировать профиль</a>
<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-5 fw-normal">Твои новости</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.News)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="News" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">Посмотреть</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="News" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                                        <a asp-controller="News" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Удалить</a>
                                    }
                                </div>
                                <small class="text-muted">@item.Category</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-5 fw-normal">Твои мероприятия</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Events)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Event" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">Посмотреть</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                                        <a asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Удалить</a>
                                    }
                                </div>
                                <small class="text-muted">@item.Category</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-5 fw-normal">Твои материалы</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Materials)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Material" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Посмотреть</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="Material" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                                        <a asp-controller="Material" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Удалить</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>